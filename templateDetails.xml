<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" method="upgrade">
  <name>Kamande</name>
  <creationDate>JAN 2015</creationDate>
  <author>Stefano Roncaglia</author>
  <copyright></copyright>
  <authorEmail></authorEmail>
  <authorUrl></authorUrl>
  <version>0.1</version>
  <description>
    <![CDATA[
		<h1>Kamande</h1>
		<p>Insert here the template description</p>
	]]>
  </description>
  <files>
    <folder>css</folder>
    <folder>fonts</folder>
    <folder>html</folder>
    <folder>images</folder>
    <folder>includes</folder>
    <folder>js</folder>
    <filename>index.php</filename>
    <filename>favicon.ico</filename>
    <filename>templateDetails.xml</filename>
  </files>
  <positions>
    <position>top</position>
    <position>breadcrumbs</position>
    <position>navigation</position>
    <position>fullwidth</position>
    <position>showcase</position>
    <position>feature</position>
    <position>left</position>
    <position>right</position>
    <position>content-top</position>
    <position>content-bottom</position>
    <position>bottom</position>
    <position>footer</position>
    <position>debug</position>
  </positions>
  <config>
    <fields>
      <!-- LOGO-->
      <fieldset  name="logo" type="upload_func" label="Logo">
        <field name="logo_file" type="media" label="Select your logo:"></field>
        <field name="logo_link" type="text" label="Logo link:"  description="Example: http://www.myweb.com" default="index.php"></field>
        <field name="logo_width" type="text" label="Logo width:" description="Example: 90" default="173"></field>
        <field name="logo_height" type="text" label="Logo height:" description="Example: 90" default="26"></field>
      </fieldset>
    </fields>
  </config>
</extension>
